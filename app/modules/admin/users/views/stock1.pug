extends ../../../../templates/master

block content

    h1.title
        span.fa.fa-users
        | &nbsp; Blood Stock
    table.table.is-fullwidth
        thead
            th Blood Component
            th A+
            th A-
            th B+
            th B-
            th AB+
            th AB-
            th O+
            th O-
            th Blood Service Fee  
            th Actions
        
        tbody
            each stocks in stock
                tr
                    th= stocks.strBLOODCOMPONENT_DESCRIPTION
                    th= stocks.strBLOODSTOCK_AP
                    th= stocks.strBLOODSTOCK_AN
                    th= stocks.strBLOODSTOCK_BP
                    th= stocks.strBLOODSTOCK_BN
                    th= stocks.strBLOODSTOCK_ABP
                    th= stocks.strBLOODSTOCK_ABN
                    th= stocks.strBLOODSTOCK_OP
                    th= stocks.strBLOODSTOCK_ON
                    th= stocks.dblBLOODSTOCK_PRICE
                    th
                        a(href=`/admin/users/bloodstock/${stocks.intBLOODSTOCK_ID}`): span.fa.fa-edit
                        | &nbsp;
                        