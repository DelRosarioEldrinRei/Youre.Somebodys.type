extends ../../../../templates/personnav/reservationform
block content
    h1.title
        span.fa(class= user ? 'fa-user' : 'fa-user-plus')
        | &nbsp; Reservation
    form(method="POST" action=`${tblbloodbank ? `${tblbloodbank.intBLOODBANK_ID}?_method=POST` : ''}`)
        .field
            .label Blood Component
            .control    
                    select.input(name="component")     
                        each component in tblbloodcomponent  
                            option(value= component.intBLOODCOMPONENT_ID)= component.strBLOODCOMPONENT_DESCRIPTION
        .field
            .label Blood Type
            .control
                select.input(name="type")     
                        each types in tblbloodtype  
                            option(value= types.intBLOODTYPE_ID)= types.strBLOODTYPE_DESCRIPTION
        .field
            .label Quantity
            .control
                input.input(type="text" name="qty" value= reserve ? reserve.strQUANTITY : '' required)
        input.button.is-primary(type="submit" value="Submit")
    br